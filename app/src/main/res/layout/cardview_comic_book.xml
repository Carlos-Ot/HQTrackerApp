<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/card_view_background"
              android:padding="5dp"
              >
    <ImageView
        android:id="@+id/comic_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="124.65dp"
        android:adjustViewBounds="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_10dp"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:maxLines="2"
            style="@style/CardViewTitle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/lbl_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CardViewText"
                    android:text="@string/lbl_volume"
                    />
                <TextView
                    android:id="@+id/txt_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    style="@style/CardViewText"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingEnd="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/lbl_spine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    style="@style/CardViewText"
                    android:text="@string/lbl_spine"
                    />
                <TextView
                    android:id="@+id/txt_spine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    style="@style/CardViewText"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/margin_10dp"
            >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/margin_10dp"
              android:layout_weight="1"
              android:layout_gravity="start|center"
              android:orientation="horizontal"
              >

              <TextView
                  android:id="@+id/lbl_read_order"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CardViewText"
                  android:text="@string/lbl_read_order"
                  />
              <TextView
                  android:id="@+id/txt_read_order"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  style="@style/CardViewText"
                  />
          </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="end"
                >

                <ImageView
                    android:id="@+id/comic_book_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/comic_book_status"
                    />

                <TextView
                    android:id="@+id/lbl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    style="@style/CardViewText"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>